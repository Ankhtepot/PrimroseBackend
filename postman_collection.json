	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"if (pm.response.code === 401 && pm.response.headers.get('X-Token-Expired') === 'true') {",
					"    console.log('Token expired. Clearing jwt_token.');",
					"    pm.collectionVariables.set('jwt_token', '');",
					"}"
				]
			}
		}
	],
