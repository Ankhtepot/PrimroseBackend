# Copy this file to .env and fill with secure values. Do NOT commit real secrets.
# For local development you can use simple values; for production use strong passwords and Docker secrets.

# SQL Server SA password (must meet SQL Server complexity rules)
SA_PASSWORD=Your_Str0ng_P@ssw0rd!

# Connection string used by the app (uses db service name in docker-compose)
ConnectionStrings__DefaultConnection=Server=db;Database=PrimroseDb;User Id=sa;Password=${SA_PASSWORD};TrustServerCertificate=True;

# JWT secret for admin auth (use a long random string)
JwtSecret=Replace_With_A_Strong_JWT_Secret_At_Least_32_Chars

# Shared secret for TOTP (Base32 encoded)
SharedSecret=JBSWY3DPEHPK3PXP

# Optional: ASPNETCORE environment
ASPNETCORE_ENVIRONMENT=Development

# ALLOWED_ORIGINS (comma-separated) controls which browser origins may call the API.
# Example: ALLOWED_ORIGINS=https://studio.example.com,https://staging.example.com
# If empty, cross-origin requests will be restricted by default. For local dev you may set:
# ALLOWED_ORIGINS=http://localhost:3000
ALLOWED_ORIGINS=
