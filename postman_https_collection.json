		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"if (pm.response.code === 401 && pm.response.headers.get('X-Token-Expired') === 'true') {",
					"    pm.collectionVariables.unset('jwt_token');",
					"}"
				]
			}
