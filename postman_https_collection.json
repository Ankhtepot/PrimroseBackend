{
	"info": {
		"_postman_id": "b78d2b2c-63e2-4c9f-863a-8677c7f763a1",
		"name": "Primrose Backend API (HTTPS)",
		"description": "HTTPS variant of the Primrose Backend Postman collection.\n\nSet a Postman environment variable `host` to your server host (IP or domain, include port if non-standard, e.g. 127.0.0.1:443 or example.com).\n\nSee README or collection notes for SSL/trust instructions.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{ "key": "host", "value": "127.0.0.1:443", "type": "string", "description": "Host or domain (include port if non-standard)" },
		{ "key": "admin_username", "value": "admin", "type": "string", "description": "Admin username used for login" },
		{ "key": "admin_password", "value": "password", "type": "string", "description": "Admin password used for login" },
		{ "key": "jwt_token", "value": "", "type": "string", "description": "JWT set after login" },
		{ "key": "health_token", "value": "", "type": "string", "description": "Health token for X-Health-Token header" },
		{ "key": "totp_code", "value": "", "type": "string", "description": "6-digit TOTP code for X-App-Auth header" }
	],
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Admin Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.token) {",
									"    pm.collectionVariables.set(\"jwt_token\", jsonData.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"{{admin_username}}\",\n    \"password\": \"{{admin_password}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "https://{{host}}/api/auth/login",
							"host": [
								"{{host}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Public",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "X-Health-Token",
								"value": "{{health_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "https://{{host}}/health",
							"host": [
								"{{host}}"
							],
							"path": [
								"health"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Pages (TOTP)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "X-App-Auth",
								"value": "{{totp_code}}",
								"description": "6-digit TOTP code generated from SharedSecret",
								"type": "text"
							}
						],
						"url": {
							"raw": "https://{{host}}/api/pages",
							"host": [
								"{{host}}"
							],
							"path": [
								"api",
								"pages"
							]
						},
						"description": "Requires TOTP code in X-App-Auth header. You can use a tool like Google Authenticator or an online TOTP generator with your `SharedSecret`."
					},
					"response": []
				}
			]
		},
